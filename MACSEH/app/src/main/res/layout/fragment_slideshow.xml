<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fingerprint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context="com.example.macseh.MainActivity">


    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:isScrollContainer="false"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/IV_Waring"
            android:layout_width="196dp"
            android:layout_height="208dp"
            android:layout_marginBottom="50dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/qr" />


        <EditText
            android:id="@+id/ET_Codigo"

            android:focusable="false"


            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textPrimaryDark"
            android:drawableTint="#FFFFFF"
            android:ems="10"
            android:hint="ESTADO DE SESION"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textPrimary"
            android:textSize="21sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:orientation="horizontal">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"></LinearLayout>

        <Button
            android:id="@+id/BtnScan"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:background="@color/backgroung_botones"
            android:text="ESCANEAR CODIGO"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>